@model List<ITproekt.Models.Product>

<style>
    .carousel-control{
        background-image: none!important;
        background-color:black;
        opacity: 1;
    }

    .carousel{
        margin-top: 2rem;
    }
    .shop-button{
        position: absolute;
        top: 77%;
        left: 73%;
    }
</style>

<div id="hot-products-carousel" class="carousel">
    <ol class="carousel-indicators">
        <li data-target="#hot-products-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#hot-products-carousel" data-slide-to="1"></li>
        <li data-target="#hot-products-carousel" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner">

        @for (int i = 0; i < Model.Count; i++) {
            <div class="item @(@i == 0 ? "active" : "")">
                <img src="@Model[i].ImageUrl" style="display: block; margin:auto;" />
                @Html.ActionLink("View in shop", "Details", "Products", routeValues: new { id = Model[i].ID }, htmlAttributes: new { @class = "btn btn-warning shop-button" })
            </div>
        }
    </div>

    <a class="left carousel-control" href="#hot-products-carousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#hot-products-carousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>